    </meta>
    <extension url="http://hl7.org/fhir/ig/cdc-acg/StructureDefinition/cdc-valueset-inclusion">
        <valueString value="Procedures or therapies specific to a terminal patient."/>
    </extension>
    <extension url="http://hl7.org/fhir/ig/cdc-acg/StructureDefinition/cdc-valueset-exclusion">
        <valueString value="Procedures or therapies that are done on a deceased patient."/>
    </extension>
